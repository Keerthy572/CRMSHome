@model IEnumerable<dynamic>
@{
    Layout = "_CustomerLayout";
    ViewData["Active"] = "Bookings";
    ViewData["Title"] = "Your Bookings";
}
<link rel="stylesheet" href="~/css/active-booking.css" />

<h2 class="mb-5 text-center fw-bold">Your Active Bookings</h2>

@if (Model == null || !Model.Any())
{
    <p class="text-muted text-center">You have no active bookings.</p>
}
else
{
    <div class="row g-4">
        @foreach (var item in Model)
        {
            var booking = item.Booking;
            var car = item.Car;

            <div class="col-12 col-md-6 col-lg-4">
                <div class="card booking-card shadow-sm p-3 position-relative">

                    <!-- Car Image -->
                    <img src="@car.ImagePath" alt="@car.Brand"
                         class="card-img-top booking-img mb-3" />

                    <div class="card-body">
                        <h5 class="card-title fw-bold">@car.Brand - @car.Model</h5>
                        <p class="card-text mb-1">
                            <strong>Seats:</strong> @car.SeatCapacity |
                            <strong>Price/Day:</strong> Rs.@car.RentPerDay
                        </p>
                        <p class="card-text mb-1">
                            <strong>Booking Period:</strong> @booking.StartDate.ToString("dd/MM/yyyy")
                            - @booking.EndDate.ToString("dd/MM/yyyy")
                        </p>
                        <p class="card-text mb-1 fw-semibold">
                            <strong>Total Cost:</strong> Rs.@booking.TotalCost
                        </p>
                    </div>

                    <div class="card-footer d-flex justify-content-between align-items-center bg-white border-0 mt-2">
                        @if (booking.StartDate > DateTime.Now)
                        {
                            <form asp-action="CancelBooking" method="post" class="d-inline-block">
                                <input type="hidden" name="bookingId" value="@booking.Id" />
                                <button type="submit" class="btn btn-danger btn-sm">Cancel</button>
                            </form>
                        }

                        @if (!booking.IsPaid)
                        {
                            <a class="btn btn-success btn-sm" href="@Url.Action("Payment", "Customer", new { bookingId = booking.Id })">Pay Now</a>
                        }
                        else
                        {
                            <span class="badge bg-success">Paid</span>
                        }
                    </div>

                </div>
            </div>
        }
    </div>
}
