@model List<CRMSHome.Models.Filter>

<link rel="stylesheet" href="~/css2/filter.css" />

<div class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold">Manage Filters</h2>
        <a asp-action="AddFilter" class="btn btn-primary btn-lg shadow-sm">+ Add Filter</a>
    </div>

    @if (!Model.Any())
    {
        <p class="text-center text-muted">No filters added yet.</p>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover shadow-sm rounded overflow-hidden align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>Brand</th>
                        <th>Seat Capacity</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var f in Model)
                    {
                        <tr class="align-middle">
                            <td>@f.Brand</td>
                            <td>@f.SeatCapacity</td>
                            <td class="text-center">
                                <a asp-action="DeleteFilter" asp-route-id="@f.Id"
                                   class="btn btn-danger btn-sm shadow-sm"
                                   onclick="return confirm('Are you sure you want to delete this filter?');">
                                    Delete
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
