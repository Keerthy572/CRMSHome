@model CRMSHome.Models.Car

@{
    ViewData["Title"] = "Edit Car";
}

<link rel="stylesheet" href="~/css2/edit-car.css" />

<div class="container my-5 d-flex justify-content-center">
    <div class="card shadow-lg p-4" style="max-width:600px; width:100%; border-radius:12px;">
        <h3 class="text-center fw-bold mb-4">Edit Car Details</h3>

        <form asp-action="EditCar" method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="Id" />

            <div class="mb-3">
                <label asp-for="Brand" class="form-label fw-bold"></label>
                <select asp-for="Brand" class="form-select">
                    <option value="">--Select Brand--</option>
                    @if (ViewBag.Brands != null)
                    {
                        foreach (var b in ViewBag.Brands as List<string>)
                        {
                            <option value="@b" selected="@(Model?.Brand == b)">@b</option>
                        }
                    }
                </select>
                <span asp-validation-for="Brand" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Model" class="form-label fw-bold"></label>
                <input asp-for="Model" class="form-control" />
                <span asp-validation-for="Model" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="CarType" class="form-label fw-bold"></label>
                <input asp-for="CarType" class="form-control" />
                <span asp-validation-for="CarType" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="SeatCapacity" class="form-label fw-bold"></label>
                <select asp-for="SeatCapacity" class="form-select">
                    <option value="">--Select Seat Capacity--</option>
                    @if (ViewBag.SeatCapacities != null)
                    {
                        foreach (var sc in ViewBag.SeatCapacities as List<int>)
                        {
                            <option value="@sc" selected="@(Model?.SeatCapacity == sc)">@sc</option>
                        }
                    }
                </select>
                <span asp-validation-for="SeatCapacity" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="RentPerDay" class="form-label fw-bold"></label>
                <input asp-for="RentPerDay" type="number" step="0.01" class="form-control" />
                <span asp-validation-for="RentPerDay" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="AvailableStatus" class="form-label fw-bold"></label>
                <select asp-for="AvailableStatus" class="form-select">
                    <option value="Available" selected="@(Model?.AvailableStatus == "Available")">Available</option>
                    <option value="Not Available" selected="@(Model?.AvailableStatus == "Not Available")">Not Available</option>
                </select>
                <span asp-validation-for="AvailableStatus" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label fw-bold">Car Image</label>
                <input type="file" name="carImage" class="form-control" />
                @if (!string.IsNullOrEmpty(Model.ImagePath))
                {
                    <div class="mt-2 text-center">
                        <img src="@Model.ImagePath" alt="Car Image" class="img-thumbnail" style="max-width:200px;" />
                    </div>
                }
                <input type="hidden" asp-for="ImagePath" />

            </div>

            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-primary w-45">Save Changes</button>
                <a asp-action="Privacy" class="btn btn-secondary w-45">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
