@model CRMSHome.ViewModels.DashboardViewModel

@{
    ViewData["Title"] = "Dashboard";
}
<link rel="stylesheet" href="~/css/dashboard.css" />

<h2 class="mb-4 text-center fw-bold">Welcome Admin! </h2>

<!-- Summary Cards -->
<div class="row justify-content-center g-4 mb-5">
    <div class="col-sm-6 col-md-4 col-lg-2">
        <div class="card summary-card bg-primary text-white">
            <div class="card-body">
                <h6>Total Cars</h6>
                <h3>@Model.TotalCars</h3>
            </div>
        </div>
    </div>

    <div class="col-sm-6 col-md-4 col-lg-2">
        <div class="card summary-card bg-success text-white">
            <div class="card-body">
                <h6>Cars Available</h6>
                <h3>@Model.AvailableCars</h3>
            </div>
        </div>
    </div>

    <div class="col-sm-6 col-md-4 col-lg-2">
        <div class="card summary-card bg-danger text-white">
            <div class="card-body">
                <h6>Cars Unavailable</h6>
                <h3>@Model.NotAvailableCars</h3>
            </div>
        </div>
    </div>

    <div class="col-sm-6 col-md-4 col-lg-2">
        <div class="card summary-card bg-warning text-dark">
            <div class="card-body">
                <h6>Booked Cars</h6>
                <h3>@Model.BookedCars</h3>
            </div>
        </div>
    </div>

    <div class="col-sm-6 col-md-4 col-lg-2">
        <div class="card summary-card bg-info text-white">
            <div class="card-body">
                <h6>Ready for Booking</h6>
                <h3>@Model.NotBookedCars</h3>
            </div>
        </div>
    </div>
</div>

<!-- Charts Section -->
<div class="row g-4 justify-content-center">
    <div class="col-md-5">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-light fw-bold text-center">Availability Overview</div>
            <div class="card-body d-flex justify-content-center">
                <canvas id="availabilityChart" style="max-height: 300px;"></canvas>
            </div>
        </div>
    </div>

    <div class="col-md-5">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-light fw-bold text-center">Booking Overview</div>
            <div class="card-body d-flex justify-content-center">
                <canvas id="bookingChart" style="max-height: 300px;"></canvas>
            </div>
        </div>
    </div>
</div>

<!-- Chart.js -->
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    // Availability Chart (Pie)
    const ctx1 = document.getElementById('availabilityChart').getContext('2d');
    new Chart(ctx1, {
        type: 'pie',
        data: {
            labels: ['Available', 'Unavailable'],
            datasets: [{
                data: [@Model.AvailableCars, @Model.NotAvailableCars],
                backgroundColor: ['#28a745', '#dc3545']
            }]
        },
        options: {
            responsive: true,
            plugins: { legend: { position: 'bottom' } }
        }
    });

    // Booking Chart (Doughnut)
    const ctx2 = document.getElementById('bookingChart').getContext('2d');
    new Chart(ctx2, {
        type: 'doughnut',
        data: {
            labels: ['Booked', 'Ready for Booking'],
            datasets: [{
                data: [@Model.BookedCars, @Model.NotBookedCars],
                backgroundColor: ['#ffc107', '#17a2b8']
            }]
        },
        options: {
            responsive: true,
            plugins: { legend: { position: 'bottom' } }
        }
    });
</script>
