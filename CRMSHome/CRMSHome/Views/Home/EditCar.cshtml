@model CRMSHome.Models.Car

@{
    ViewData["Title"] = "Edit Car";
}

<h2>Edit Car</h2>

<form asp-action="EditCar" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />

    <div class="form-group mb-2">
        <label asp-for="Brand" class="form-label"></label>
        <select asp-for="Brand" class="form-control">
            <option value="">--Select Brand--</option>
            @if (ViewBag.Brands != null)
            {
                foreach (var b in ViewBag.Brands as List<string>)
                {
                    <option value="@b" selected="@(Model?.Brand == b)">@b</option>
                }
            }
        </select>
        <span asp-validation-for="Brand" class="text-danger"></span>
    </div>

    <div class="form-group mb-2">
        <label asp-for="Model" class="form-label"></label>
        <input asp-for="Model" class="form-control" />
        <span asp-validation-for="Model" class="text-danger"></span>
    </div>

    <div class="form-group mb-2">
        <label asp-for="CarType" class="form-label"></label>
        <input asp-for="CarType" class="form-control" />
        <span asp-validation-for="CarType" class="text-danger"></span>
    </div>

    <div class="form-group mb-2">
        <label asp-for="SeatCapacity" class="form-label"></label>
        <select asp-for="SeatCapacity" class="form-control">
            <option value="">--Select Seat Capacity--</option>
            @if (ViewBag.SeatCapacities != null)
            {
                foreach (var sc in ViewBag.SeatCapacities as List<int>)
                {
                    <option value="@sc" selected="@(Model?.SeatCapacity == sc)">@sc</option>
                }
            }
        </select>
        <span asp-validation-for="SeatCapacity" class="text-danger"></span>
    </div>

    <div class="form-group mb-2">
        <label asp-for="RentPerDay" class="form-label"></label>
        <input asp-for="RentPerDay" type="number" step="0.01" class="form-control" />
        <span asp-validation-for="RentPerDay" class="text-danger"></span>
    </div>

    <div class="form-group mb-2">
        <label asp-for="AvailableStatus" class="form-label"></label>
        <select asp-for="AvailableStatus" class="form-control">
            <option value="Available" selected="@(Model?.AvailableStatus == "Available")">Available</option>
            <option value="Not Available" selected="@(Model?.AvailableStatus == "Not Available")">Not Available</option>
        </select>
        <span asp-validation-for="AvailableStatus" class="text-danger"></span>
    </div>

    <div class="form-group mb-2">
        <label>Car Image (optional)</label>
        <input type="file" name="carImage" class="form-control" />
        @if (!string.IsNullOrEmpty(Model.ImagePath))
        {
            <div class="mt-2">
                <img src="@Model.ImagePath" alt="Car Image" width="150" />
            </div>
        }
    </div>

    <button type="submit" class="btn btn-primary mt-2">Save Changes</button>
    <a asp-action="Privacy" class="btn btn-secondary mt-2">Back to List</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
