@model IEnumerable<CRMSHome.Models.Car>

@{
    ViewData["Title"] = "Manage Cars";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Manage Cars</h2>
        <a asp-action="AddCar" class="btn btn-success">+ Add Car</a>
    </div>

    @if (!Model.Any())
    {
        <p>No cars added yet.</p>
    }
    else
    {
        <table class="table table-bordered table-striped">
            <thead class="table-dark">
                <tr>
                    <th>Brand</th>
                    <th>Model</th>
                    <th>Type</th>
                    <th>Seats</th>
                    <th>Rent/Day</th>
                    <th>Available</th>            
                    <th style="width:220px;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var car in Model)
                {
                    <tr>
                        <td>@car.Brand</td>
                        <td>@car.Model</td>
                        <td>@car.CarType</td>
                        <td>@car.SeatCapacity</td>
                        <td>@car.RentPerDay</td>
                        <td>@car.AvailableStatus</td>
                        
                        <td>
                            <a asp-action="ViewCar" asp-route-id="@car.Id" class="btn btn-info btn-sm">View</a>
                            <a asp-action="EditCar" asp-route-id="@car.Id" class="btn btn-warning btn-sm">Edit</a>
                            <a asp-action="DeleteCar" asp-route-id="@car.Id"
                               class="btn btn-danger btn-sm"
                               onclick="return confirm('Are you sure you want to delete this car?');">
                                Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
