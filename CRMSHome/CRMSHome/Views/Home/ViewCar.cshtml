@model CRMSHome.Models.Car

@{
    ViewData["Title"] = "Car Details";
}

<link rel="stylesheet" href="~/css2/view-car.css" />

<div class="container my-5 d-flex justify-content-center">
    <div class="card shadow-lg" style="max-width:600px; width:100%; border-radius:12px;">
        @if (!string.IsNullOrEmpty(Model.ImagePath))
        {
            <img src="@Model.ImagePath" class="card-img-top" alt="Car Image" style="height:300px; object-fit:cover; border-top-left-radius:12px; border-top-right-radius:12px;" />
        }

        <div class="card-body">
            <h3 class="card-title text-center fw-bold mb-3">@Model.Brand - @Model.Model</h3>

            <ul class="list-group list-group-flush mb-3">
                <li class="list-group-item"><strong>Car Type:</strong> @Model.CarType</li>
                <li class="list-group-item"><strong>Seat Capacity:</strong> @Model.SeatCapacity</li>
                <li class="list-group-item"><strong>Rent Per Day:</strong> Rs.@Model.RentPerDay</li>
                <li class="list-group-item">
                    <strong>Available Status:</strong>
                    @if (Model.AvailableStatus == "Available")
                    {
                        <span class="badge bg-success">@Model.AvailableStatus</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">@Model.AvailableStatus</span>
                    }
                </li>
            </ul>

            <div class="d-flex justify-content-between">
                <a asp-action="EditCar" asp-route-id="@Model.Id" class="btn btn-warning w-45">Edit</a>
                <a asp-action="Privacy" class="btn btn-secondary w-45">Back to List</a>
            </div>
        </div>
    </div>
</div>
