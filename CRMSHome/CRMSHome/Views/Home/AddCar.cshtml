@model CRMSHome.Models.Car

@{
    ViewData["Title"] = "Add Car";
}

<link rel="stylesheet" href="~/css2/add-car.css" />

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg add-car-card">
                <div class="card-header text-center add-car-header">
                    <h3>Add New Car</h3>
                </div>

                <div class="card-body p-4">
                    <form asp-action="AddCar" method="post" enctype="multipart/form-data">

                        <div class="mb-3">
                            <label asp-for="Brand" class="form-label"></label>
                            <select asp-for="Brand" class="form-select">
                                <option value="">--Select Brand--</option>
                                @if (ViewBag.Brands != null)
                                {
                                    foreach (var b in ViewBag.Brands as List<string>)
                                    {
                                        <option value="@b" selected="@(Model?.Brand == b)">@b</option>
                                    }
                                }
                            </select>
                            <span asp-validation-for="Brand" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Model" class="form-label"></label>
                            <input asp-for="Model" class="form-control" placeholder="Enter Model" />
                            <span asp-validation-for="Model" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="CarType" class="form-label"></label>
                            <input asp-for="CarType" class="form-control" placeholder="Enter Car Type" />
                            <span asp-validation-for="CarType" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="SeatCapacity" class="form-label"></label>
                            <select asp-for="SeatCapacity" class="form-select">
                                <option value="">--Select Seat Capacity--</option>
                                @if (ViewBag.SeatCapacities != null)
                                {
                                    foreach (var sc in ViewBag.SeatCapacities as List<int>)
                                    {
                                        <option value="@sc" selected="@(Model?.SeatCapacity == sc)">@sc</option>
                                    }
                                }
                            </select>
                            <span asp-validation-for="SeatCapacity" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="RentPerDay" class="form-label"></label>
                            <input asp-for="RentPerDay" type="number" step="0.01" class="form-control" placeholder="Enter Rent per Day" />
                            <span asp-validation-for="RentPerDay" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="AvailableStatus" class="form-label"></label>
                            <select asp-for="AvailableStatus" class="form-select">
                                <option value="Available" selected="@(Model?.AvailableStatus == "Available")">Available</option>
                                <option value="Not Available" selected="@(Model?.AvailableStatus == "Not Available")">Not Available</option>
                            </select>
                            <span asp-validation-for="AvailableStatus" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Car Image</label>
                            <input type="file" name="carImage" class="form-control" />
                        </div>

                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-primary btn-add-car">Add Car</button>
                            <a asp-action="Privacy" class="btn btn-secondary">Back to List</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
