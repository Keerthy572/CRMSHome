@model CRMSHome.ViewModels.DashboardViewModel

@{
    ViewData["Title"] = "Dashboard";
}

<h2 class="mb-4">Car Rental Dashboard</h2>

<div class="row g-3 mb-4">
    @* Card Template *@
    <div class="col-sm-6 col-md-4 col-lg-2">
        <div class="card text-white bg-primary shadow-sm rounded">
            <div class="card-body text-center p-3">
                <h6 class="card-title mb-2">Total Cars</h6>
                <h3 class="card-text">@Model.TotalCars</h3>
            </div>
        </div>
    </div>

    <div class="col-sm-6 col-md-4 col-lg-2">
        <div class="card text-white bg-success shadow-sm rounded">
            <div class="card-body text-center p-3">
                <h6 class="card-title mb-2">Cars Available</h6>
                <h3 class="card-text">@Model.AvailableCars</h3>
            </div>
        </div>
    </div>

    <div class="col-sm-6 col-md-4 col-lg-2">
        <div class="card text-white bg-danger shadow-sm rounded">
            <div class="card-body text-center p-3">
                <h6 class="card-title mb-2">Cars Unavailable</h6>
                <h3 class="card-text">@Model.NotAvailableCars</h3>
            </div>
        </div>
    </div>

    <div class="col-sm-6 col-md-4 col-lg-2">
        <div class="card text-dark bg-warning shadow-sm rounded">
            <div class="card-body text-center p-3">
                <h6 class="card-title mb-2">Booked Cars</h6>
                <h3 class="card-text">@Model.BookedCars</h3>
            </div>
        </div>
    </div>

    <div class="col-sm-6 col-md-4 col-lg-2">
        <div class="card text-white bg-info shadow-sm rounded">
            <div class="card-body text-center p-3">
                <h6 class="card-title mb-2">Ready for Booking</h6>
                <h3 class="card-text">@Model.NotBookedCars</h3>
            </div>
        </div>
    </div>
</div>

<div class="row g-4">
    <div class="col-md-6">
        <div class="card shadow-sm rounded">
            <div class="card-header bg-light">
                Availability Overview
            </div>
            <div class="card-body">
                <canvas id="availabilityChart"></canvas>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card shadow-sm rounded">
            <div class="card-header bg-light">
                Booking Overview
            </div>
            <div class="card-body">
                <canvas id="bookingChart"></canvas>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    // Availability Pie Chart
    const ctx1 = document.getElementById('availabilityChart').getContext('2d');
    const availabilityChart = new Chart(ctx1, {
        type: 'pie',
        data: {
            labels: ['Available', 'Unavailable'],
            datasets: [{
                data: [@Model.AvailableCars, @Model.NotAvailableCars],
                backgroundColor: ['#28a745', '#dc3545'],
                borderWidth: 1
            }]
        },
        options: {
            responsive: true,
            plugins: { legend: { position: 'bottom' } }
        }
    });

    // Booking Doughnut Chart
    const ctx2 = document.getElementById('bookingChart').getContext('2d');
    const bookingChart = new Chart(ctx2, {
        type: 'doughnut',
        data: {
            labels: ['Booked', 'Ready for Booking'],
            datasets: [{
                data: [@Model.BookedCars, @Model.TotalCars - @Model.BookedCars],
                backgroundColor: ['#ffc107', '#17a2b8'],
                borderWidth: 1
            }]
        },
        options: {
            responsive: true,
            plugins: { legend: { position: 'bottom' } }
        }
    });
</script>
