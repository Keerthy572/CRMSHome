@model CRMSHome.ViewModels.DashboardViewModel


@{
    ViewData["Title"] = "Dashboard";
}

<h2>Car Rental Dashboard</h2>

<div class="row">
    <div class="col-md-3">
        <div class="card bg-primary text-white mb-3">
            <div class="card-body">
                <h5>Total</h5>
                <h3>@Model.TotalCars Cars</h3>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card bg-success text-white mb-3">
            <div class="card-body">
                <h5>Available</h5>
                <h3>@Model.AvailableCars Cars</h3>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card bg-danger text-white mb-3">
            <div class="card-body">
                <h5>Currently Unavailable</h5>
                <h3>@Model.NotAvailableCars Cars</h3>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card bg-warning text-dark mb-3">
            <div class="card-body">
                <h5>Booked</h5>
                <h3>@Model.BookedCars Cars</h3>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-3">
        <div class="card bg-info text-white mb-3">
            <div class="card-body">
                <h5>Ready for Booking</h5>
                <h3>@Model.NotBookedCars Cars</h3>
            </div>
        </div>
    </div>
</div>
<div class="row mt-4">
    <div class="col-md-6">
        <canvas id="availabilityChart"></canvas>
    </div>
    <div class="col-md-6">
        <canvas id="bookingChart"></canvas>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    // Availability Pie Chart
    var ctx1 = document.getElementById('availabilityChart').getContext('2d');
    var availabilityChart = new Chart(ctx1, {
        type: 'pie',
        data: {
            labels: ['Available', 'Currently Unavailable'],
            datasets: [{
                data: [@Model.AvailableCars, @Model.NotAvailableCars],
                backgroundColor: ['#28a745', '#dc3545']
            }]
        }
    });

    // Booking Doughnut Chart
    var ctx2 = document.getElementById('bookingChart').getContext('2d');
    var bookingChart = new Chart(ctx2, {
        type: 'doughnut',
        data: {
            labels: ['Booked', 'Ready for Booking'],
            datasets: [{
                data: [@Model.BookedCars, @Model.TotalCars - @Model.BookedCars],
                backgroundColor: ['#ffc107', '#17a2b8']
            }]
        }
    });
</script>
