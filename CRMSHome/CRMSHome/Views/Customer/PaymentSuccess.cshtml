@model dynamic
@{
    ViewData["Title"] = "Payment Success";
}

<link rel="stylesheet" href="~/css/paymentsuccess.css" />

<div class="success-page">
    <div class="success-card text-center">

        <!-- Success Icon -->
        <div class="success-icon">
            <i class="bi bi-check-circle-fill"></i>
        </div>

        <h2 class="text-success fw-bold mb-2">Payment Successful!</h2>
        <p class="text-muted mb-4">Thank you! Your payment has been processed successfully.</p>

        <!-- Booking Details -->
        <div class="details text-start">
            <p><strong>Booking ID:</strong> @Model.Booking.Id</p>
            <p><strong>Amount Paid:</strong> Rs. @Model.Payment.Amount</p>
            <p><strong>Payment Date:</strong> @Model.Payment.PaymentDate.ToString("dd/MM/yyyy HH:mm")</p>
            <p><strong>Car:</strong> @Model.Car.Brand - @Model.Car.Model</p>
            <p><strong>Card Used:</strong> @Model.Payment.CardBrand ending with @Model.Payment.CardLast4</p>
        </div>

        <!-- Button -->
        <a href="@Url.Action("CustomerDashboard", "Customer")" class="btn btn-primary btn-lg mt-4">
            Go to Dashboard
        </a>
    </div>
</div>
