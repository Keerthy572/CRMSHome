@model CRMSHome.Models.PaymentSuccessViewModel

@{
    ViewData["Title"] = "Payment Successful";
    Layout = "_CustomerLayout";
}

<div class="container mt-5">
    <div class="card shadow-lg p-4 text-center">
        <h2 class="text-success">✅ Payment Successful</h2>
        <p class="text-muted">Thank you for your payment. Here are your details:</p>
        <hr />

        @* <p><strong>Booking ID:</strong> @Model.Booking.Id</p> *@
        <p><strong>Amount Paid:</strong> Rs. @Model.Payment.Amount</p>
        <p><strong>Payment Date:</strong> @Model.Payment.PaymentDate.ToString("dd/MM/yyyy HH:mm")</p>
        <p><strong>Car:</strong> @Model.Car.Brand - @Model.Car.Model</p>
        <p><strong>Card Used:</strong> @Model.Payment.CardBrand ending with @Model.Payment.CardLast4</p>
        <p><strong>Customer:</strong> @Model.Payment.CustomerName</p>

        <a asp-action="CustomerDashboard" asp-controller="Customer" class="btn btn-primary mt-3">
            Back to Home
        </a>
    </div>
</div>
