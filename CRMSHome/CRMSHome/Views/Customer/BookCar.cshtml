@model CRMSHome.Models.Booking
@{
    Layout = "_CustomerLayout";
    ViewData["Title"] = "Book Car";
    var car = ViewBag.Car as CRMSHome.Models.Car;
}

<div class="card shadow p-4">
    <h3>Book @car.Brand @car.Model</h3>

    <form asp-action="BookCar" method="post">
        <input type="hidden" asp-for="CarId" />

        <div class="mb-3">
            <label class="form-label">Start Date</label>
            <input asp-for="StartDate" type="date" class="form-control" id="startDate" />
            <span asp-validation-for="StartDate" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">End Date</label>
            <input asp-for="EndDate" type="date" class="form-control" id="endDate" />
            <span asp-validation-for="EndDate" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Total Cost</label>
            <input asp-for="TotalCost" class="form-control" id="totalCost" readonly />
        </div>

        <button type="submit" class="btn btn-success">Confirm Booking</button>
        <a asp-action="CustomerDashboard" class="btn btn-secondary">Cancel</a>
    </form>
</div>

@section Scripts {
    <script>
        const rentPerDay = @car.RentPerDay;

        function calculateCost() {
            let start = new Date(document.getElementById("startDate").value);
            let end = new Date(document.getElementById("endDate").value);

            if (start && end && end >= start) {
                let days = Math.ceil((end - start) / (1000 * 60 * 60 * 24)) + 1;
                if (days > 30) {
                    alert("Booking cannot exceed 30 days!");
                    document.getElementById("endDate").value = "";
                    document.getElementById("totalCost").value = "";
                    return;
                }
                document.getElementById("totalCost").value = (days * rentPerDay).toFixed(2);
            }
        }

        document.getElementById("startDate").addEventListener("change", calculateCost);
        document.getElementById("endDate").addEventListener("change", calculateCost);
    </script>
}
