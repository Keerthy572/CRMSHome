@{
    ViewData["Title"] = "About Us";
    Layout = "_CustomerLayout";
}

<link rel="stylesheet" href="~/css/about.css" />

<div class="container mt-5">
    <div class="text-center mb-5">
        <h2 class="fw-bold text-primary">About Us</h2>
        <p class="text-muted">Learn more about our project and the admin who manages the system.</p>
    </div>

    <div class="row align-items-center mb-5">
        <div class="col-md-6">
            <img src="~/images/aboutcar.jpg" alt="Car Rental Service"
                 class="img-fluid rounded shadow"
                 style="max-height: 450px; width:100%; object-fit: cover;" />
        </div>

        <div class="col-md-6">
            <h4 class="fw-bold">Who We Are</h4>
            <p>
                At Our Car Rental, we believe that traveling should always be easy and stress-free. <br /> Our diverse fleet of modern cars, flexible rental plans, and competitive pricing, <br /> we ensure our customers enjoy the best possible experience.
                Whether it’s a business trip, a family vacation, or a weekend adventure, <br /> we are here to provide reliable vehicles and 24/7 customer support. Your satisfaction is our priority, <br> and we are committed to making every ride memorable.
            </p>
        </div>
    </div>

    <!-- ✅ Admin Section -->
    <div class="text-center mb-5">
        <h3 class="fw-bold text-dark">Meet the Admin</h3>
        <div class="card shadow-sm border-0 p-4 d-inline-block mt-3" style="max-width: 350px;">
            <img src="~/images/admin.jpg" alt="Admin" class="rounded-circle mb-3 shadow" width="120" height="120" />
            <h5 class="fw-bold">System Administrator</h5>
            <p class="text-muted">
                Responsible for managing the entire Car Rental System, ensuring smooth
                operations, customer satisfaction, and platform security.
            </p>
            <span class="badge bg-primary mb-3">Project Admin</span>

            <!-- ✅ Contact Info -->
            <div class="text-start mt-3">
                <p><i class="bi bi-envelope-fill text-primary"></i> <strong>Email:</strong> admin@carrental.com</p>
                <p><i class="bi bi-telephone-fill text-primary"></i> <strong>Phone:</strong> +94 77 123 4567</p>
            </div>
        </div>
    </div>

    <div class="text-center">
        <a asp-action="Index" asp-controller="Customer" class="btn btn-sm btn-secondary">Back to Home</a>
    </div>

</div>
