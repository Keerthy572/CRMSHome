@model List<CRMSHome.Models.Filter>
<h2>Manage Filters</h2>
<a asp-action="AddFilter" class="btn btn-primary mb-2">Add Filter</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Brand</th>
            <th>Seat Capacity</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var f in Model)
        {
            <tr>
                <td>@f.Brand</td>
                <td>@f.SeatCapacity</td>
                <td>
                    <a asp-action="DeleteFilter" asp-route-id="@f.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
