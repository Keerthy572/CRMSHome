@model CRMSHome.Models.Filter
<h2>Add Filter</h2>

<form asp-action="AddFilter" method="post">
    <div class="form-group mb-2">
        <label asp-for="Brand" class="form-label"></label>
        <input asp-for="Brand" class="form-control" />
        <span asp-validation-for="Brand" class="text-danger"></span>
    </div>

    <div class="form-group mb-2">
        <label asp-for="SeatCapacity" class="form-label"></label>
        <input asp-for="SeatCapacity" type="number" class="form-control" />
        <span asp-validation-for="SeatCapacity" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-2">Add Filter</button>
    <a asp-action="Index" class="btn btn-secondary mt-2">Back</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
