@model CRMSHome.Models.Filter

<link rel="stylesheet" href="~/css2/filter.css" />

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg rounded p-4">
                <h2 class="text-center mb-4 fw-bold">Add New Filter</h2>

                <form asp-action="AddFilter" method="post">
                    <div class="mb-3">
                        <label asp-for="Brand" class="form-label fw-semibold">Brand</label>
                        <input asp-for="Brand" class="form-control form-control-lg" placeholder="Enter car brand" />
                        <span asp-validation-for="Brand" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="SeatCapacity" class="form-label fw-semibold">Seat Capacity</label>
                        <input asp-for="SeatCapacity" type="number" class="form-control form-control-lg" placeholder="Enter seat capacity" />
                        <span asp-validation-for="SeatCapacity" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-between">
                        <button type="submit" class="btn btn-primary btn-lg shadow-sm">Add Filter</button>
                        <a asp-action="Index" class="btn btn-secondary btn-lg shadow-sm">Back</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
