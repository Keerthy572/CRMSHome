@model CRMSHome.Models.Admin
@{
    Layout = null;
    ViewData["Title"] = "Login";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="/css/Login.css" asp-append-version="true" />

    <style>
        body {
            background: url('https://images.unsplash.com/photo-1503376780353-7e6692767b70?ixlib=rb-4.0.3&auto=format&fit=crop&w=1600&q=80') no-repeat center center/cover;
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .card {
            background: rgba(0, 0, 0, 0.85); /* Transparent black overlay */
            color: #fff;
            border: none;
            border-radius: 15px;
            backdrop-filter: blur(10px);
        }

        .card-header {
            border-bottom: none;
            font-weight: bold;
            font-size: 1.2rem;
        }

        .input-group-text {
            background: #222;
            color: #ddd;
            border: none;
        }

        .form-control {
            background: #111;
            color: #fff;
            border: 1px solid #333;
        }

            .form-control:focus {
                background: #111;
                color: #fff;
                border-color: #0d6efd;
                box-shadow: none;
            }

        .btn-custom {
            background: linear-gradient(45deg, #0d6efd, #6610f2);
            border: none;
            color: white;
            font-weight: bold;
            transition: 0.3s;
        }

            .btn-custom:hover {
                background: linear-gradient(45deg, #6610f2, #0d6efd);
                transform: translateY(-2px);
            }

        a.text-link {
            color: #0dcaf0;
            text-decoration: none;
        }

            a.text-link:hover {
                text-decoration: underline;
            }
    </style>
</head>
<body>

    <div class="col-md-4">
        <div class="card shadow-lg p-4">
            <div class="card-header text-center text-primary bg-transparent">
                <h4><i class="fas fa-car-side me-2"></i>Rent ME</h4>
            </div>
            <div class="card-body">
                <form asp-controller="Login" asp-action="Index" method="post" class="needs-validation" novalidate>
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

                    <div class="form-group mb-3">
                        <label asp-for="UserName" class="form-label"></label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-user"></i></span>
                            <input asp-for="UserName" class="form-control" placeholder="Enter username" />
                        </div>
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Password" class="form-label"></label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-lock"></i></span>
                            <input asp-for="Password" type="password" class="form-control" placeholder="Enter password" />
                        </div>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger text-center">@ViewBag.Error</div>
                    }

                    <button type="submit" class="btn btn-custom w-100 py-2 rounded-pill">
                        <i class="fas fa-sign-in-alt me-2"></i>Login
                    </button>

                    <div class="mt-3 text-center">
                        <a asp-controller="Login" asp-action="Register" class="text-link">
                            <i class="fas fa-user-plus me-1"></i>New user? Register here
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@4.0.0/dist/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>